@{
    ViewData["Title"] = "Vehicles";
}
<vehicles>
    <style>
        .grey-border {
            margin-top: 20px;
            padding: 10px;
            -webkit-box-shadow: 0 0 15px #999;
            box-shadow: 0 0 15px #999;
            border-radius: 5px;
        }

        button {
            padding: 10px;
            margin-bottom: 10px;
        }
    </style>

    <div class="grey-border">
        <span *ngIf="isLoading">Loading...</span>
        <div class="form-group" *ngIf="makes != null">
            <label for="make">Make</label>
            <select id="make" [(ngModel)]="selectedMake" (change)="onMakeSelect($event.target.value)" class="form-control">
                <option value="0">All</option>
                <option *ngFor="#make of makes" [value]="make.name">{{ make.name }}</option>
            </select><br />
            <label for="model">Model</label>
            <select id="model" [(ngModel)]="selectedModel" (change)="onModelSelect($event.target.value)" class="form-control">
                <option value="0">All</option>
                <option *ngFor="#model of models" [value]="model.name">{{ model.name }}</option>
            </select><br />
            <label for="year">Year</label>
            <select id="year" [(ngModel)]="selectedYear" class="form-control">
                <option value="0">--Select Year--</option>
                <option *ngFor="#year of years" [value]="year.year">{{ year.year }}</option>
            </select><br />
            <button class="btn btn-default" value="Go">Go</button>
        </div>
    </div>
    <div class="grey-border">
        <grid [rows]="details.engine" [columns]="columns"></grid>
    </div>
</vehicles>